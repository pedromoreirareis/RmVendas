<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pedromoreirareisgmail.rmvendas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ProdutosCadActivity"
            android:parentActivityName=".activity.ProdutosListActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ProdutosListActivity" />
        </activity>
        <activity
            android:name=".activity.ProdutosListActivity"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.ProdutosSelecActivity"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.EscolhaQuantActivity"
            android:parentActivityName=".activity.ProdutosSelecActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ProdutosSelecActivity" />
        </activity>

        <provider
            android:name=".data.VendasProvider"
            android:authorities="com.pedromoreirareisgmail.rmvendas"
            android:exported="true" />

        <activity
            android:name=".activity.RetListActivity"
            android:label="@string/tela_ret_list" />
        <activity
            android:name=".activity.EntListActivity"
            android:label="@string/tela_ent_list" />
        <activity android:name=".activity.EntCadActivity" />
        <activity android:name=".activity.RetCadActivity"></activity>
    </application>

</manifest>