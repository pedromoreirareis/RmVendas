<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_padrao_8"
    android:paddingEnd="@dimen/margin_padrao_16"
    android:paddingStart="@dimen/margin_padrao_16"
    android:paddingTop="@dimen/margin_padrao_8">


    <TextView
        android:id="@+id/tv_a_receber_list_data"
        style="@style/TituloTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_padrao_8"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1" />


    <TextView
        android:id="@+id/tv_a_receber_list_descricao"
        style="@style/TituloTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_padrao_4"
        android:layout_marginStart="@dimen/margin_padrao_4"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tv_a_receber_list_valor"
        style="@style/TituloTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_padrao_4"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:maxLines="1" />


</LinearLayout>
