<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pedromoreirareisgmail.rmvendas.activity.VendQuantActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padrao_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_vend_quant_nome_produto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_vend_quant_valor_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_padrao_16"
            android:paddingEnd="@dimen/margin_padrao_16"
            android:paddingStart="@dimen/margin_padrao_16">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/margin_padrao_16">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_vend_quant_quantidade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:digits="0123456789"
                    android:hint="@string/hint_quantidade"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:selectAllOnFocus="true" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_padrao_16"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Switch
                        android:id="@+id/switch_vend_quant_adicional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/text_adicional" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_vend_quant_adicional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_vend_quant_valor_adicional"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:digits="0123456789"
                            android:hint="@string/hint_valor"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:selectAllOnFocus="true" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_padrao_16"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Switch
                        android:id="@+id/switch_vend_quant_desconto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/text_desconto" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_vend_quant_desconto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_vend_quant_valor_desconto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:digits="0123456789"
                            android:hint="@string/hint_valor"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:selectAllOnFocus="true" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>


            <Switch
                android:id="@+id/switch_vend_quant_prazo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padrao_16"
                android:text="@string/text_a_prazo" />

            <LinearLayout
                android:id="@+id/ll_vend_quant_prazo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_padrao_16"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_padrao_16"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_vend_quant_valor_prazo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:digits="0123456789"
                            android:hint="@string/hint_valor"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:selectAllOnFocus="true" />

                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/but_vend_quant_cliente"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorRed"
                        android:drawableStart="@drawable/ic_people_black_48px"
                        android:drawableTint="@color/colorWhite"
                        android:src="@drawable/ic_people_black_48px"
                        android:text="Cliente"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_vend_quant_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_padrao_16"
                    android:gravity="center_vertical"
                    android:text="Teste Nome do Cliente" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
