<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pedromoreirareisgmail.rmvendas.activity.VendQuantActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nome_vend_quant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Bolo de banana com canela" />

            <TextView
                android:id="@+id/tv_valor_total_vend_quant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:gravity="center" />
        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_quant_vend_quant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:digits=".0123456789"
                android:hint="@string/hint_prod_esc_quant_quantidade"
                android:inputType="number"
                android:selectAllOnFocus="true" />

        </android.support.design.widget.TextInputLayout>

        <Switch
            android:id="@+id/switch_cobertura_vend_quant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_prod_esc_quant_cobertura" />

        <FrameLayout
            android:id="@+id/fl_cobertura_vend_quant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText

                    android:id="@+id/et_valor_cobertura_vend_quant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:digits=".0123456789"
                    android:hint="@string/hint_prod_esc_quant_valor_cobertura"
                    android:inputType="number"
                    android:selectAllOnFocus="true" />

            </android.support.design.widget.TextInputLayout>
        </FrameLayout>

        <Switch
            android:id="@+id/switch_desconto_vend_quant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_prod_esc_quant_desconto" />

        <FrameLayout
            android:id="@+id/fl_desconto_vend_quant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_valor_desconto_vend_quant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:digits=".0123456789"
                    android:hint="@string/text_prod_esc_quant_desconto"
                    android:inputType="number"
                    android:selectAllOnFocus="true" />

            </android.support.design.widget.TextInputLayout>
        </FrameLayout>


    </LinearLayout>
</ScrollView>