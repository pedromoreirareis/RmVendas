<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pedromoreirareisgmail.rmvendas.activity.VendQuantActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vend_quant"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_vend_quant_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_vend_quant_valor_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_vend_quant"
            android:paddingEnd="@dimen/margin_vend_quant"
            android:paddingStart="@dimen/margin_vend_quant">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/margin_vend_quant">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_vend_quant_quantidade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:digits="0123456789"
                    android:hint="@string/hint_prod_esc_quant_quantidade"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:selectAllOnFocus="true" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_vend_quant"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Switch
                        android:id="@+id/switch_vend_quant_cobertura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/text_prod_esc_quant_cobertura" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_vend_quant_cobertura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_vend_quant_valor_cobertura"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:digits="0123456789"
                            android:hint="@string/hint_valor"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:selectAllOnFocus="true" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_vend_quant"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Switch
                        android:id="@+id/switch_vend_quant_desconto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/text_prod_esc_quant_desconto" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_vend_quant_desconto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_vend_quant_valor_desconto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:digits="0123456789"
                            android:hint="@string/hint_valor"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:selectAllOnFocus="true" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <Switch
                android:id="@+id/switch_vend_quant_prazo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vend_quant"
                android:text="@string/text_prod_esc_quant_prazo" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
