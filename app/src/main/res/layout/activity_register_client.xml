<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_default_16"
    tools:context="com.pedromoreirareisgmail.rmvendas.activitys.RegisterClientActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_client_name"
                style="@style/editTexts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hitn_client_name"
                android:imeOptions="actionNext" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/but_clear_register_client_name"
            android:layout_width="24dp"
            style="@style/butClear"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_client_fone"
                style="@style/editNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hitn_client_fone"
                android:imeOptions="actionDone"
                android:inputType="phone" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/but_clear_register_client_fone"
            style="@style/butClear"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</LinearLayout>
