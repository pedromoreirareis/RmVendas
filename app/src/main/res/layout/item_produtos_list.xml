<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_padrao_16"
    android:paddingLeft="@dimen/margin_padrao_16"
    android:paddingRight="@dimen/margin_padrao_16"
    android:paddingTop="@dimen/margin_padrao_16">

    <TextView
        android:id="@+id/tv_produto_nome"
        style="@style/DestaqueNegrito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_produto_preco"
        style="@style/DetalhesItemValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>