<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pedromoreirareisgmail.rmvendas.activitys.ClosedActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_default_16"
        android:paddingEnd="@dimen/margin_default_16"
        android:paddingStart="@dimen/margin_default_16"
        android:paddingTop="@dimen/margin_default_4">

        <!-- SALDO  -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:elevation="@dimen/margin_default_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_default_16"
                android:layout_marginEnd="@dimen/margin_default_4"
                android:layout_marginStart="@dimen/margin_default_4"
                android:layout_marginTop="@dimen/margin_default_4"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">


                    <TextView
                        style="@style/textViewClosed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/margin_default_4"
                        android:paddingEnd="@dimen/margin_default_16"
                        android:paddingStart="@dimen/margin_default_16"
                        android:paddingTop="@dimen/margin_default_4"
                        android:text="@string/text_closed_title_balance"
                        android:textColor="@color/colorWhite" />

                </android.support.v7.widget.CardView>

                <!-- SALDO FINAL -->
                <TextView
                    android:id="@+id/tv_closed_balance_value_end"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- MOVIMENTO DE CAIXA -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:elevation="@dimen/margin_default_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_default_16"
                android:layout_marginEnd="@dimen/margin_default_4"
                android:layout_marginStart="@dimen/margin_default_4"
                android:layout_marginTop="@dimen/margin_default_4"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <TextView
                        style="@style/textViewClosed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/margin_default_4"
                        android:paddingEnd="@dimen/margin_default_16"
                        android:paddingStart="@dimen/margin_default_16"
                        android:paddingTop="@dimen/margin_default_4"
                        android:text="@string/text_closed_title_cashmove"
                        android:textColor="@color/colorWhite" />

                </android.support.v7.widget.CardView>

                <!-- TOTAL VENDAS -->
                <TextView
                    android:id="@+id/tv_closed_cashmove_sale_value_total"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default_8" />

                <!-- VENDAS A VISTA -->
                <TextView
                    android:id="@+id/tv_closed_cashmove_in_cash_value"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default_8"
                    android:textColor="@color/colorBlue" />

                <!-- SALDO INICIAL -->
                <TextView
                    android:id="@+id/tv_closed_cashmove_balance_start_value"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default_8"
                    android:textColor="@color/colorBlue" />

                <!-- ENTRADAS -->
                <TextView
                    android:id="@+id/tv_closed_cashmove_add_value"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default_8"
                    android:textColor="@color/colorBlue" />

                <!-- RETIRADAS -->
                <TextView
                    android:id="@+id/tv_closed_cashmove_remove_value"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- INFORMAÇÕES ADICIONAIS -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:elevation="@dimen/margin_default_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_default_16"
                android:layout_marginEnd="@dimen/margin_default_4"
                android:layout_marginStart="@dimen/margin_default_4"
                android:layout_marginTop="@dimen/margin_default_4"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <TextView
                        style="@style/textViewClosed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/margin_default_4"
                        android:paddingEnd="@dimen/margin_default_16"
                        android:paddingStart="@dimen/margin_default_16"
                        android:paddingTop="@dimen/margin_default_4"
                        android:text="@string/text_closed_title_info_add"
                        android:textColor="@color/colorWhite" />

                </android.support.v7.widget.CardView>

                <!-- VENDAS -->
                <TextView
                    android:id="@+id/tv_closed_inf_sale_value"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default_8"
                    android:textColor="@color/colorBlack" />

                <!-- VENDIDOS -->
                <TextView
                    android:id="@+id/tv_closed_inf_solds_value"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default_8"
                    android:textColor="@color/colorBlack" />

                <!-- VENDIDOS A VISTA -->
                <TextView
                    android:id="@+id/tv_closed_inf_sold_in_cash_value"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default_8"
                    android:textColor="@color/colorBlack" />

                <!-- ADICIONAL -->
                <TextView
                    android:id="@+id/tv_closed_inf_add_value"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default_8"
                    android:textColor="@color/colorBlue" />

                <!-- DESCONTO -->
                <TextView
                    android:id="@+id/tv_closed_inf_discount_value"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default_8"
                    android:textColor="@color/colorAccent" />

                <!-- A PRAZO -->
                <TextView
                    android:id="@+id/tv_closed_inf_forward_value"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default_8"
                    android:textColor="@color/colorBlack" />

                <!-- NO CARTAO -->
                <TextView
                    android:id="@+id/tv_closed_inf_card_value"
                    style="@style/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- CLIENTES VENDA A PRAZO  -->
        <android.support.v7.widget.CardView
            android:id="@+id/cv_closed_client_forward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:elevation="@dimen/margin_default_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_default_16"
                android:layout_marginEnd="@dimen/margin_default_4"
                android:layout_marginStart="@dimen/margin_default_4"
                android:layout_marginTop="@dimen/margin_default_4"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <TextView
                        style="@style/textViewClosed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/margin_default_4"
                        android:paddingEnd="@dimen/margin_default_16"
                        android:paddingStart="@dimen/margin_default_16"
                        android:paddingTop="@dimen/margin_default_4"
                        android:text="@string/text_closed_title_client"
                        android:textColor="@color/colorWhite" />

                </android.support.v7.widget.CardView>

                <!--NOME CLIENTES -->
                <TextView
                    android:id="@+id/tv_closed_client_forward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingEnd="@dimen/margin_default_4"
                    android:paddingStart="@dimen/margin_default_4"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>