<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_default_24"
    android:paddingEnd="@dimen/margin_default_16"
    android:paddingStart="@dimen/margin_default_16"
    android:paddingTop="@dimen/margin_default_24">


    <TextView
        android:id="@+id/tv_receive_list_date"
        style="@style/textViewDescriptionRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_default_8"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1" />


    <TextView
        android:id="@+id/tv_receive_list_description"
        style="@style/textViewDescriptionRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_default_4"
        android:layout_marginStart="@dimen/margin_default_4"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tv_receive_list_value"
        style="@style/textViewBold"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_default_4"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:maxLines="1" />


</LinearLayout>
