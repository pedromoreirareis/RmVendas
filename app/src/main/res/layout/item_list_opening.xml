<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_default_24"
    android:paddingEnd="@dimen/margin_default_16"
    android:paddingStart="@dimen/margin_default_16"
    android:paddingTop="@dimen/margin_default_24">

    <TextView
        android:id="@+id/tv_opening_list_value"
        style="@style/textViewBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_opening_list_hour"
        style="@style/textViewRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>