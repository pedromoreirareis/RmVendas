<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_pesquisa_vend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"

        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_pesquisa_vend_list"
            style="@style/CampoNunberText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_search_black_24px"
            android:focusableInTouchMode="false"
            android:hint="@string/hint_pesquisar"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingEnd="16dp"
            android:paddingStart="16dp" />

    </android.support.design.widget.TextInputLayout>

    <ListView
        android:id="@+id/listView_venda_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_input_pesquisa_vend"
        android:scrollbars="none" />


    <RelativeLayout
        android:id="@+id/empty_view_vend_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_empty_vend_list"
            android:layout_width="@dimen/image_empty"
            android:layout_height="@dimen/image_empty"
            android:layout_centerInParent="true"
            android:contentDescription="@string/image_desc_prod_list_empty"
            android:src="@drawable/ic_coracao_partido" />

        <TextView
            style="@style/TextEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_empty_vend_list"
            android:layout_marginTop="8dp"
            android:text="@string/text_vend_list_empty" />

    </RelativeLayout>

</RelativeLayout>
