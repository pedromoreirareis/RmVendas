<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_default_4"
        android:layout_marginLeft="@dimen/margin_default_16"
        android:layout_marginRight="@dimen/margin_default_16"
        android:layout_marginTop="@dimen/margin_default_8"
        app:cardCornerRadius="8dp"
        app:elevation="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_default_4"
                android:layout_marginLeft="@dimen/margin_default_8"
                android:layout_marginRight="@dimen/margin_default_8"
                android:layout_marginTop="@dimen/margin_default_8"
                app:cardBackgroundColor="@color/colorRed"
                app:cardCornerRadius="8dp"
                app:elevation="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_default_8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_main_valor_quantidade"
                        style="@style/textViewBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_default_8"
                        android:layout_marginStart="@dimen/margin_default_8"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/tv_main_nome_produto"
                        style="@style/textViewBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/tv_main_data_hora"
                        style="@style/textViewRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_default_8"
                        android:layout_marginStart="@dimen/margin_default_8"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_default_8"
                android:paddingEnd="@dimen/margin_default_8"
                android:paddingStart="@dimen/margin_default_8">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_default_4"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_main_valor_venda"
                        style="@style/textViewDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_attach_money_black_48px" />

                    <TextView
                        android:id="@+id/tv_main_valor_total"
                        style="@style/textViewDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_attach_money_black_48px" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_main_valor_adicional"
                        style="@style/textViewDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_attach_money_black_48px" />

                    <TextView
                        android:id="@+id/tv_main_valor_a_vista"
                        style="@style/textViewDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_attach_money_black_48px" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_main_valor_desconto"
                        style="@style/textViewDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_attach_money_black_48px" />

                    <TextView
                        android:id="@+id/tv_main_valor_a_prazo"
                        style="@style/textViewDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_attach_money_black_48px"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_default_4"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/tv_main_valor_a_prazo_nome_cliente"
                    style="@style/textViewDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>