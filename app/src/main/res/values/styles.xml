<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TituloTextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAppearanceSmall">?android:attr/textAppearanceSmall</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="DataHoraTextView">
        <item name="android:textAppearanceSmall">?android:attr/textAppearanceSmall</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorDataItemMain</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="DetalhesItemLabel">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearanceSmall">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/colorDetalhesLabel</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="DetalhesItemValor">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearanceSmall">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/colorDetalhesValor</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="DetalhesItemLabelEntRet">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearanceSmall">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/colorDetalhesLabel</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextEmpty">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearanceSmall">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/colorTextEmpty</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="CampoNunberText">
        <item name="android:focusable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:selectable">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TituloFechamento">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAppearanceSmall">?android:attr/textAppearanceSmall</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="valoresFech">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearanceLarge">?android:attr/textAppearanceLarge</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
</resources>
